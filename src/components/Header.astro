---
// Header component for Wellstone Breads
---

<header class="bg-primary-900 text-neutral-50 sticky top-0 z-30 shadow-xl">
  <div class="container-custom">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group transition-all duration-200">
        <div class="relative">
          <img
            src="/favicon.svg"
            alt="Wellstone Breads Logo"
            class="w-12 h-12 shadow-lg group-hover:shadow-xl group-hover:scale-105 transition-all duration-200"
          />
        </div>
        <div>
          <h1 class="text-2xl font-serif font-bold text-neutral-50 group-hover:text-accent-300 transition-colors">
            Wellstone Breads
          </h1>
          <p class="text-sm text-accent-200 font-medium">
            Artisan Baked Fresh Daily
          </p>
        </div>
      </a>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center gap-6">
        <a
          href="/#products"
          class="text-neutral-200 hover:text-accent-300 font-medium transition-colors duration-200 px-4 py-2 rounded-lg hover:bg-primary-800"
        >
          Products
        </a>
        <a
          href="/#about"
          class="text-neutral-200 hover:text-accent-300 font-medium transition-colors duration-200 px-4 py-2 rounded-lg hover:bg-primary-800"
        >
          About
        </a>
        <a
          href="/checkout"
          class="btn-secondary ml-2"
        >
          Order Now
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-toggle"
        class="md:hidden p-2 rounded-lg hover:bg-primary-800 transition-colors duration-200"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <nav id="mobile-menu" class="hidden md:hidden pb-4 animate-fade-in">
      <div class="flex flex-col gap-2">
        <a
          href="/#products"
          class="text-neutral-200 hover:text-accent-300 font-medium transition-colors duration-200 px-4 py-3 rounded-lg hover:bg-primary-800"
        >
          Products
        </a>
        <a
          href="/#about"
          class="text-neutral-200 hover:text-accent-300 font-medium transition-colors duration-200 px-4 py-3 rounded-lg hover:bg-primary-800"
        >
          About
        </a>
        <a
          href="/checkout"
          class="btn-secondary text-center"
        >
          Order Now
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const toggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');

  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
